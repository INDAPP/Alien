<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.HabitatActivity"
        android:background="#CC9B0E">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@android:drawable/btn_dialog"
            android:id="@+id/imageView"
            android:scaleType="centerCrop" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"/>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/buttonContinue"
            android:id="@+id/constraintLayout"
            android:layout_marginStart="32dp" android:layout_marginEnd="32dp" android:padding="32dp"
            android:background="@drawable/habitat_white_background" app:layout_constraintVertical_chainStyle="packed"
            android:layout_marginBottom="32dp">

        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewTitle"
                android:textAlignment="center"
                android:textSize="30sp"
                android:fontFamily="@font/aero_regular"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/textViewDescription" android:layout_marginBottom="32dp"/>
        <TextView
                android:text="TextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textViewDescription"
                tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Pellentesque rhoncus nulla dolor, et tristique nisl varius vel. Etiam venenatis leo a nisl interdum, ut venenatis lectus tristique. Morbi scelerisque at tellus in feugiat. Aenean eleifend turpis sed odio volutpat, vitae posuere ante aliquet. Aliquam erat tortor, consectetur vitae felis porttitor, facilisis dapibus erat. Morbi faucibus, mauris sit amet dapibus rhoncus, velit purus mollis erat, ut accumsan felis ipsum at arcu. Vivamus nulla tellus, sagittis suscipit leo vestibulum, auctor mollis magna. Nunc fringilla dignissim facilisis. Nulla varius ante sapien, eget cursus elit efficitur ac. Nulla condimentum tellus ornare nulla euismod, at dapibus augue facilisis. Duis ipsum urna, consequat et porta nec, sagittis vel augue. Vivamus consequat accumsan nisl, nec vestibulum mi efficitur et. Nam non gravida nisi. Pellentesque habitant morbi tristique senectus et netus et malesuada fames ac turpis egestas. Aliquam erat volutpat."
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewTitle" android:textSize="16sp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <Button
            android:text="Continue"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonContinue"
            android:background="@drawable/login_button"
            android:textColor="#EBF5E2"
            android:fontFamily="@font/aero_regular"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
    />
</androidx.constraintlayout.widget.ConstraintLayout>